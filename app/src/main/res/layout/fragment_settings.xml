<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLay"
    android:background="#f5f5F5"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <ImageView
        android:id="@+id/tv_cancel"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_30ssp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:src="@drawable/ic_back_btn"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/pink" />

    <TextView
        android:id="@+id/tv_settings"
        style="@style/title_style_top"
        android:paddingStart="@dimen/_5sdp"
        android:text="@string/settings"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@id/tv_done"
        app:layout_constraintStart_toEndOf="@id/tv_cancel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_done"
        style="@style/red_top_right_style"
        android:text="@string/save"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tvAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/medium"
                        android:gravity="start"
                        android:text="@string/account_details"
                        android:textAllCaps="false"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvEmailTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvAccount"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:text="Email"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvEmailTxt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:gravity="start"
                        android:singleLine="true"
                        android:text="- - - -"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:id="@+id/ViewEmail"
                        style="@style/Divider"
                        android:layout_below="@+id/tvEmail"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/tvPhoneTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ViewEmail"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:fontFamily="@font/medium"
                        android:text="Phone No."
                        android:textColor="@color/pink"
                        android:textSize="@dimen/_13ssp" />


                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvPhoneTxt"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:gravity="start"
                        android:singleLine="true"
                        android:text="- - - -"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_14ssp" />

                    <View
                        android:id="@+id/viewOne"
                        style="@style/Divider"
                        android:layout_below="@+id/tvPhone"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/showme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/viewOne"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:paddingStart="0dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="5dp"
                        android:text="@string/hideProfile"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp" />

                    <Switch
                        android:id="@+id/simpleSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_below="@+id/viewOne"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector" />

                    <View
                        android:id="@+id/viewTwo"
                        style="@style/Divider"
                        android:layout_below="@+id/showme"
                        android:layout_marginTop="@dimen/_10sdp" />


                    <Button
                        android:id="@+id/btn_reset_skiped_profile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_below="@+id/viewTwo"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/btn_white_border_new"
                        android:backgroundTint="@color/pink"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:text="Reset skipped profiles"
                        android:textAllCaps="false"
                        android:textColor="@color/pink"
                        android:textSize="@dimen/_14ssp"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cv_advanced"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/cardviewAccount"
                app:layout_constraintTop_toBottomOf="@id/cardviewAccount"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"

                    >

                    <TextView
                        android:id="@+id/tv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/medium"
                        android:text="@string/notification"
                        android:textAllCaps="false"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_14ssp"

                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvNewMatches"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/newMatches"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="@+id/tv_notification"
                        app:layout_constraintTop_toBottomOf="@+id/tv_notification"

                        />

                    <Switch
                        android:id="@+id/simpleSwitch2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector"
                        app:layout_constraintBottom_toBottomOf="@+id/tvNewMatches"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvNewMatches" />


                    <TextView
                        android:id="@+id/tvCalls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/calls"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMatchUpdate" />

                    <Switch
                        android:id="@+id/callSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/tvCalls"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvCalls" />

                    <TextView
                        android:id="@+id/tvExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/expiring_matches"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCalls" />

                    <Switch
                        android:id="@+id/expiredSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector"
                        app:layout_constraintBottom_toBottomOf="@+id/tvExpire"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvExpire" />

                    <TextView
                        android:id="@+id/tvEmailNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="Email Notifications"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvExpire" />


                    <Switch
                        android:id="@+id/emailNotifySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector"
                        app:layout_constraintBottom_toBottomOf="@+id/tvEmailNotify"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvEmailNotify" />


                    <TextView
                        android:id="@+id/tvPushNotify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="Likes Notifications"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvEmailNotify" />


                    <Switch
                        android:id="@+id/pushNotifySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector"
                        app:layout_constraintBottom_toBottomOf="@+id/tvPushNotify"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tvPushNotify" />

                    <TextView
                        android:id="@+id/tvMatchUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/match_update"
                        android:textAllCaps="false"
                        android:textColor="@color/grey_new"
                        android:textSize="@dimen/_12ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNewMatches" />

                    <Switch
                        android:id="@+id/messageSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:checked="true"
                        android:thumb="@drawable/thumb"
                        android:track="@drawable/switch_selector"
                        app:layout_constraintBottom_toBottomOf="@+id/tvMatchUpdate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvMatchUpdate" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_contactUs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/cv_advanced"
                app:layout_constraintTop_toBottomOf="@id/cv_advanced"

                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/tv_contactUs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/medium"
                        android:text="@string/contactUs"
                        android:textAllCaps="false"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_5sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_contactUs">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvHelp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/imageArrowHelp"
                                android:fontFamily="@font/medium"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/helpnsupport"
                                android:textAllCaps="false"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/imageArrowHelp"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/arrow_right" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tvRestoreSubscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/restoreSubscription"
                        android:textAllCaps="false"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_legal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/cv_contactUs"
                app:layout_constraintTop_toBottomOf="@+id/cv_contactUs">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_legal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:text="@string/legal"
                        android:textAllCaps="false"
                        android:textColor="@color/title_color"
                        android:textSize="@dimen/_14ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPrivacyPolicy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_10sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvPrivacyPolicy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/imageArrow"
                                android:fontFamily="@font/medium"
                                android:padding="@dimen/_5sdp"
                                android:text="Privacy Policy"
                                android:textAllCaps="false"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/imageArrow"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/arrow_right" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTermnService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_10sdp"

                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp">

                            <TextView
                                android:id="@+id/tvTermnService"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@+id/imageArrow2"
                                android:fontFamily="@font/medium"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/terms_n_service"
                                android:textAllCaps="false"
                                android:textColor="@color/title_color"
                                android:textSize="@dimen/_12ssp" />


                            <ImageView
                                android:id="@+id/imageArrow2"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/arrow_right" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tvLicence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/medium"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="@string/licence"
                        android:textAllCaps="false"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="@dimen/_12ssp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvTermnService" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_bg_deluxe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/facebookbtn"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/btn_bg_premium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_legal">>
                <!--#413960-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:drawableStart="@drawable/ic_premium"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/primaryTextColor"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:text="@string/videe_delux"
                    android:textAllCaps="true"
                    android:textColor="#413960"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_bg_premium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/facebookbtn"
                android:backgroundTint="@color/white"
                android:elevation="@dimen/_2sdp"
                android:visibility="gone"
