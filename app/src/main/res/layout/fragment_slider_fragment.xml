<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5F5"
    android:padding="@dimen/_10sdp"
    tools:context=".ui.slider_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_stroke_sldier"
        android:backgroundTint="@color/pink"

        >

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pagerSlider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/text_pager_indicator"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@+id/pagerSlider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pagerSlider"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#f5f5F5"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:text="@string/swift_premium"
        android:textColor="@color/pink"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/facebookbtn"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="@dimen/_5sdp"
        android:text="Subscribed"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="gone" />


</RelativeLayout>