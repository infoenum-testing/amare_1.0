<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/koloda_card_view_background"
            android:backgroundTint="@color/white">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/_5sdp"
                android:text="Report User"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:text="Tell us why you are reporting the user.\nThis is anonymous"
                android:textColor="@color/grey_new"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <LinearLayout
                android:id="@+id/et_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_msg">


                <LinearLayout
                    android:id="@+id/ll_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/card_bg"
                    android:elevation="10dp"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_100sdp"
                        android:gravity="center_vertical"
                        android:text="Inappropriate Photos"
                        android:textColor="@color/profile_txt_color"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableStartCompat="@drawable/ic_report_camera" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/card_bg"
                    android:elevation="10dp"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_100sdp"
                        android:gravity="center_vertical"
                        android:text="Inappropriate Content"
                        android:textColor="@color/profile_txt_color"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableStartCompat="@drawable/ic_report_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_behave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/card_bg"
                    android:elevation="10dp"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_behave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_100sdp"
                        android:gravity="center_vertical"
                        android:text="Inappropriate Behaviour"
                        android:textColor="@color/profile_txt_color"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableStartCompat="@drawable/ic_report_behavior" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_stolen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/card_bg"
                    android:elevation="10dp"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/tv_stolen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_100sdp"
                        android:gravity="center_vertical"
                        android:text="Stolen Photo"
                        android:textColor="@color/profile_txt_color"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableStartCompat="@drawable/ic_report_photo" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/card_bg"
                    android:elevation="10dp"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_100sdp"
                        android:gravity="center_vertical"
                        android:text="Under 18"
                        android:textColor="@color/profile_txt_color"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableStartCompat="@drawable/ic_report_age" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/card_bg"
                    android:elevation="10dp"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:elevation="@dimen/_100sdp"
                        android:gravity="center_vertical"
                        android:text="Other"
                        android:textColor="@color/profile_txt_color"
                        android:textSize="14sp"
                        app:drawableEndCompat="@drawable/right_arrow"
                        app:drawableStartCompat="@drawable/ic_report_other" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/facebookbtn"
                android:backgroundTint="@color/pink"
                 android:fontFamily="@font/medium"
                android:minWidth="@dimen/_200sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_reason" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
