<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryTextColor</item>
        <item name="bottomSheetStyle">@style/CustomBottomSheetDialogTheme</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/arrow_down</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNew" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="activityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">false</item>

    </style>


    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>


    <style name="Theme_Transparents" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent_alpha</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_drawable</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:progressTint">@color/primaryTextColor</item>
        <item name="android:progressBackgroundTint">@color/secondaryTextColor</item>
    </style>

    <!-- BottomSheet -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top_my_fast</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down_my_fast</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--otp view style-->
    <style name="otp_style" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
    </style>
    <!--font style for edittext -->
    <style name="et_font_style" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/medium</item>
    </style>


    <!--for divider or separater-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>


    <!--for token text font and color-->
    <style name="token_price_style">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">20sp</item>
    </style>


    <!--for token text font and color-->
    <style name="token_quantity_style">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">15sp</item>
    </style>


    <!--for token text font and color-->
    <style name="crush_token_count_style">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/yellow_new</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/crush_token_count_bg</item>
        <!--time_token_count_bg-->
        <!--vip_token_count_bg-->
    </style>


    <style name="time_token_count_style">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/time_token_count_bg</item>
        <!--vip_token_count_bg-->
    </style>


    <style name="vip_token_count_style">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/red_start</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/vip_token_count_bg</item>
    </style>


    <!--continue button style of tokens -->
    <style name="token_btn_style">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:text">@string/continue_txt</item>
        <item name="android:background">@drawable/vip_token_count_bg</item>
    </style>


    <!--title style -->

    <style name="title_style_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--top right button style-->

    <style name="red_top_right_style" parent="title_style_top">
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!--edit profile title-->
    <style name="edit_profile_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>


    <!--edit profile text data-->
    <style name="edit_profile_data_txt_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/medium</item>
        <item name="background">@drawable/roundbg</item>
        <item name="android:drawableEnd">@drawable/ic_next</item>
        <item name="android:elevation">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">@color/grey_new</item>
        <item name="android:textColorHint">@color/pink</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="drawableTint">@color/pink</item>
    </style>


    <!--other info editProfile style-->

    <style name="otherInfoProfileStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/grey_new</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="drawableTint">@color/pink</item>
    </style>

    <!--title_page_below image on every fragment-->
    <style name="center_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_17ssp</item>
    </style>


</resources>
